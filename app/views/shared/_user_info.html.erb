<%= link_to gravatar_for(current_user, size: 52), current_user %>
<h1>
  <%= current_user.name %>
</h1>
<span>
  <%= link_to "view my profile", current_user %>
</span>
<span>
  <%= pluralize(current_user.microposts.without_private_messages.count, "micropost")%>
  <%= ", " + pluralize(Micropost.received_private_messages(current_user.id).count, "received private micropost") %>

</span>
