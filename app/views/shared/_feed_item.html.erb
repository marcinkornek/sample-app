<li id="<%= feed_item.id %>">
  <%= link_to gravatar_for(feed_item.user, size: 52), feed_item.user %>
    <span class="user">
      <%= link_to feed_item.user.name, feed_item.user %>
    </span>
    <span class="content"><%= wrap(feed_item.content) %></span>
    <span class="timestamp">
      Posted <%= time_tag(feed_item.created_at, class:"timeago") %>

    </span>
  <%= render 'shared/delete_micropost', micropost: feed_item %>
</li>
